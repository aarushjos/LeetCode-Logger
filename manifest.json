{
    "manifest_version":3,
    "name":"LeetCode Logger",
    "version":"1.0",
    "description":"Automatically log solved LeetCode Problems to Google Sheets",
    "permissions":[
        "storage",
        "identity",
        "activeTab",
        "notifications"
    ],
    "icons": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
    },
    "host_permissions":[
        "https://leetcode.com/*",
        "https://www.googleapis.com/*"
    ],
    "background":{
        "service_worker":"background.js"
    },
    "content_scripts":[
        {
            "matches": ["https://leetcode.com/problems/*"],
            "js": ["content.js"],
            "run_at": "document_idle"
        }
    ],
    "action":{
        "default_popup":"popup.html"
    },
    "oauth2":{
        "client_id":"920480244272-bpi5ajocfr361o068hn7p4oc912s77vp.apps.googleusercontent.com",
        "scopes":[
            "https://www.googleapis.com/auth/spreadsheets"
        ]
    }
}